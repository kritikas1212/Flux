{%- comment -%}
  Renders social sharing buttons

  Accepts:
  - share_title: {String} Title to share
  - share_permalink: {String} URL to share
  - share_image: {Object} Image to share

  Usage:
  {% render 'social-share', share_title: product.title, share_permalink: product.url, share_image: product.featured_media %}
{%- endcomment -%}

<div class="flex items-center gap-4 pt-6 border-t border-border">
  <span class="text-sm font-semibold">{{ 'general.social.share' | t }}:</span>
  
  <div class="flex gap-2">
    <!-- Facebook -->
    <a 
      href="https://www.facebook.com/sharer.php?u={{ share_permalink | url_encode }}"
      target="_blank"
      rel="noopener"
      class="w-10 h-10 flex items-center justify-center rounded-lg border border-border hover:border-accent hover:text-accent transition-colors duration-300"
      aria-label="{{ 'general.social.share_on_facebook' | t }}"
    >
      {%- render 'icon-facebook' -%}
    </a>

    <!-- Twitter -->
    <a 
      href="https://twitter.com/share?text={{ share_title | url_encode }}&url={{ share_permalink | url_encode }}"
      target="_blank"
      rel="noopener"
      class="w-10 h-10 flex items-center justify-center rounded-lg border border-border hover:border-accent hover:text-accent transition-colors duration-300"
      aria-label="{{ 'general.social.share_on_twitter' | t }}"
    >
      {%- render 'icon-twitter' -%}
    </a>

    <!-- Pinterest -->
    <a 
      href="https://pinterest.com/pin/create/button/?url={{ share_permalink | url_encode }}&media={{ share_image | image_url: width: 1024 | prepend: 'https:' | url_encode }}&description={{ share_title | url_encode }}"
      target="_blank"
      rel="noopener"
      class="w-10 h-10 flex items-center justify-center rounded-lg border border-border hover:border-accent hover:text-accent transition-colors duration-300"
      aria-label="{{ 'general.social.share_on_pinterest' | t }}"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
        <path d="M12 2C6.477 2 2 6.477 2 12c0 4.237 2.636 7.855 6.356 9.312-.088-.791-.167-2.005.035-2.868.182-.78 1.172-4.97 1.172-4.97s-.299-.6-.299-1.486c0-1.39.806-2.428 1.81-2.428.852 0 1.264.64 1.264 1.408 0 .858-.545 2.14-.828 3.33-.236.995.5 1.807 1.48 1.807 1.778 0 3.144-1.874 3.144-4.58 0-2.393-1.72-4.068-4.177-4.068-2.845 0-4.515 2.135-4.515 4.34 0 .859.331 1.781.745 2.281a.3.3 0 01.069.288l-.278 1.133c-.044.183-.145.223-.335.134-1.249-.581-2.03-2.407-2.03-3.874 0-3.154 2.292-6.052 6.608-6.052 3.469 0 6.165 2.473 6.165 5.776 0 3.447-2.173 6.22-5.19 6.22-1.013 0-1.965-.525-2.291-1.148l-.623 2.378c-.226.869-.835 1.958-1.244 2.621.937.29 1.931.446 2.962.446 5.523 0 10-4.477 10-10S17.523 2 12 2z"/>
      </svg>
    </a>
  </div>
</div>

