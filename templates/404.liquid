<div class="container-flux py-24">
  <div class="text-center max-w-2xl mx-auto">
    
    <!-- 404 Illustration -->
    <div class="mb-8">
      <h1 class="text-9xl font-bold gradient-text mb-4">404</h1>
    </div>

    <h2 class="text-3xl md:text-4xl font-bold mb-4">
      {{ 'general.404.title' | t }}
    </h2>
    
    <p class="text-lg text-text-secondary mb-8">
      {{ 'general.404.subtext' | t }}
    </p>

    <!-- Search -->
    <form action="{{ routes.search_url }}" method="get" class="mb-8">
      <div class="relative max-w-md mx-auto">
        <input
          type="search"
          name="q"
          placeholder="{{ 'general.search.placeholder' | t }}"
          class="input pr-12"
          autofocus
        >
        <button type="submit" class="absolute right-4 top-1/2 -translate-y-1/2 text-text-secondary hover:text-accent">
          {%- render 'icon-search' -%}
        </button>
      </div>
    </form>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="{{ routes.root_url }}" class="btn btn-primary">
        Back to Home
      </a>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn-outline">
        Shop All Products
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404",
  "settings": []
}
{% endschema %}

