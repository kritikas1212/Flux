<div class="container-flux py-12">
  <article class="max-w-4xl mx-auto">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">{{ page.title }}</h1>
      
      {%- if page.metafields.custom.subtitle != blank -%}
        <p class="text-xl text-text-secondary">{{ page.metafields.custom.subtitle }}</p>
      {%- endif -%}
    </header>

    <div class="prose prose-invert prose-lg max-w-none">
      {{ page.content }}
    </div>
  </article>
</div>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}

