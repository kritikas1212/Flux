[
  {
    "name": "theme_info",
    "theme_name": "Flux",
    "theme_version": "1.0.0",
    "theme_author": "Your Name",
    "theme_documentation_url": "https://github.com/yourusername/flux-theme",
    "theme_support_url": "https://github.com/yourusername/flux-theme/issues"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "color_bg_primary",
        "label": "Primary background",
        "default": "#0A0D14"
      },
      {
        "type": "color",
        "id": "color_bg_secondary",
        "label": "Secondary background",
        "default": "#111827"
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "color",
        "id": "color_text_primary",
        "label": "Primary text",
        "default": "#E5E7EB"
      },
      {
        "type": "color",
        "id": "color_text_secondary",
        "label": "Secondary text",
        "default": "#9CA3AF"
      },
      {
        "type": "header",
        "content": "Accent"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#3B82F6"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border color",
        "default": "#1F2937"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading size",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 120,
        "step": 5,
        "unit": "%",
        "label": "Body size",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "unit": "px",
        "label": "Page width",
        "default": 1400
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Section spacing",
        "default": 50
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": false
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_vendor",
        "label": "Show vendor in search results",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_price",
        "label": "Show price in search results",
        "default": true
      }
    ]
  },
  {
    "name": "Currency",
    "settings": [
      {
        "type": "header",
        "content": "Currency format"
      },
      {
        "type": "checkbox",
        "id": "currency_code_enabled",
        "label": "Show currency codes",
        "default": false,
        "info": "Example: $1.00 USD"
      }
    ]
  }
]

