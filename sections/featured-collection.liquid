<section class="section-spacing" data-section-id="{{ section.id }}" data-section-type="featured-collection">
  <div class="container-flux">
    
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      {%- if section.settings.heading != blank -%}
        <h2 class="mb-4">
          {%- if section.settings.heading_gradient -%}
            <span class="gradient-text">{{ section.settings.heading }}</span>
          {%- else -%}
            {{ section.settings.heading }}
          {%- endif -%}
        </h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="text-text-secondary text-lg max-w-2xl mx-auto">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}
    </div>

    <!-- Products Grid -->
    {%- liquid
      assign collection = collections[section.settings.collection]
      assign products_to_show = section.settings.products_to_show | default: 4
    -%}

    {%- if collection != blank and collection.products_count > 0 -%}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-{{ section.settings.grid_columns }} gap-6 md:gap-8">
        {%- for product in collection.products limit: products_to_show -%}
          <div class="animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 100 }}ms;">
            {%- render 'product-card', product: product -%}
          </div>
        {%- endfor -%}
      </div>

      <!-- View All Button -->
      {%- if section.settings.show_view_all -%}
        <div class="text-center mt-12">
          <a href="{{ collection.url }}" class="btn btn-outline">
            {{ section.settings.button_text }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="text-center py-12">
        <p class="text-text-secondary">{{ 'sections.featured_collection.no_products' | t }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "checkbox",
      "id": "heading_gradient",
      "label": "Use gradient for heading",
      "default": true
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular items"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "grid_columns",
      "label": "Desktop columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

