<section class="section-spacing" data-section-id="{{ section.id }}" data-section-type="multicolumn">
  <div class="container-flux">
    
    {%- if section.settings.heading != blank -%}
      <div class="text-center mb-12 md:mb-16">
        <h2 class="mb-4">
          {%- if section.settings.heading_gradient -%}
            <span class="gradient-text">{{ section.settings.heading }}</span>
          {%- else -%}
            {{ section.settings.heading }}
          {%- endif -%}
        </h2>
        
        {%- if section.settings.subheading != blank -%}
          <p class="text-text-secondary text-lg max-w-2xl mx-auto">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 md:grid-cols-{{ section.settings.columns_desktop }} gap-8">
      {%- for block in section.blocks -%}
        <div class="text-center animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 100 }}ms;" {{ block.shopify_attributes }}>
          
          {%- if block.settings.image != blank -%}
            <div class="mb-6">
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                srcset="
                  {%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if block.settings.image.width >= 600 -%}{{ block.settings.image | image_url: width: 600 }} 600w,{%- endif -%}
                  {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
                "
                sizes="(min-width: 990px) {{ 100 | divided_by: section.settings.columns_desktop }}vw, (min-width: 750px) 50vw, 100vw"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                class="mx-auto rounded-xl"
                style="max-width: {{ block.settings.image_width }}px;"
              >
            </div>
          {%- endif -%}

          {%- if block.settings.heading != blank -%}
            <h3 class="text-xl md:text-2xl font-bold mb-4">{{ block.settings.heading }}</h3>
          {%- endif -%}

          {%- if block.settings.text != blank -%}
            <div class="text-text-secondary">
              {{ block.settings.text }}
            </div>
          {%- endif -%}

          {%- if block.settings.button_label != blank -%}
            <div class="mt-6">
              <a href="{{ block.settings.button_link }}" class="btn btn-outline">
                {{ block.settings.button_label }}
              </a>
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.button_label != blank -%}
      <div class="text-center mt-12">
        <a href="{{ section.settings.button_link }}" class="btn btn-primary">
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Multicolumn",
  "tag": "section",
  "class": "multicolumn-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Features"
    },
    {
      "type": "checkbox",
      "id": "heading_gradient",
      "label": "Use gradient for heading",
      "default": true
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Number of columns on desktop",
      "default": 3
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 500,
          "step": 10,
          "unit": "px",
          "label": "Image width",
          "default": 200
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Description",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multicolumn",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}

