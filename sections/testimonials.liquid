<section class="section-spacing" data-section-id="{{ section.id }}" data-section-type="testimonials">
  <div class="container-flux">
    
    {%- if section.settings.heading != blank -%}
      <div class="text-center mb-12 md:mb-16">
        <h2 class="mb-4">
          {%- if section.settings.heading_gradient -%}
            <span class="gradient-text">{{ section.settings.heading }}</span>
          {%- else -%}
            {{ section.settings.heading }}
          {%- endif -%}
        </h2>
        
        {%- if section.settings.subheading != blank -%}
          <p class="text-text-secondary text-lg max-w-2xl mx-auto">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ section.settings.columns_desktop }} gap-8">
      {%- for block in section.blocks -%}
        <div class="card animate-fade-in-up" style="animation-delay: {{ forloop.index | times: 100 }}ms;" {{ block.shopify_attributes }}>
          
          {%- if block.settings.rating > 0 -%}
            <div class="flex gap-1 mb-4" role="img" aria-label="{{ block.settings.rating }} out of 5 stars">
              {%- for i in (1..5) -%}
                {%- if i <= block.settings.rating -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-accent" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                {%- else -%}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-border" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                  </svg>
                {%- endif -%}
              {%- endfor -%}
            </div>
          {%- endif -%}

          {%- if block.settings.quote != blank -%}
            <blockquote class="text-text-secondary mb-6 italic">
              "{{ block.settings.quote }}"
            </blockquote>
          {%- endif -%}

          {%- if block.settings.author != blank -%}
            <div class="flex items-center gap-4">
              {%- if block.settings.author_image != blank -%}
                <img
                  src="{{ block.settings.author_image | image_url: width: 100 }}"
                  srcset="
                    {{ block.settings.author_image | image_url: width: 50 }} 50w,
                    {{ block.settings.author_image | image_url: width: 100 }} 100w
                  "
                  sizes="50px"
                  alt="{{ block.settings.author | escape }}"
                  width="50"
                  height="50"
                  loading="lazy"
                  class="rounded-full w-12 h-12 object-cover"
                >
              {%- endif -%}
              
              <div>
                <p class="font-semibold">{{ block.settings.author }}</p>
                {%- if block.settings.author_title != blank -%}
                  <p class="text-sm text-text-secondary">{{ block.settings.author_title }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "testimonials-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "checkbox",
      "id": "heading_gradient",
      "label": "Use gradient for heading",
      "default": true
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Number of columns on desktop",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "label": "Star rating",
          "default": 5
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Add customer reviews and testimonials to showcase your store's happy customers."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author name",
          "default": "Customer Name"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author title"
        },
        {
          "type": "image_picker",
          "id": "author_image",
          "label": "Author image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

